<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeNoActionBarTranslucent" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:windowTranslucentStatus">true</item>
     <!--   <item name="android:windowTranslucentNavigation">true</item> -->
    </style>

    <style name="AppThemeNoActionBarTransition" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowReturnTransition">@null</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/image</item>
        <item name="android:windowSharedElementReturnTransition">@null</item>

    </style>

</resources>